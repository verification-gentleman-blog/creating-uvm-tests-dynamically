{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "./run",
            "args": ["${input:testName}"],
            "options": {
                "cwd": "run/xcelium"
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "testName",
            "description": "name of the test to run",
            "options": [
              "test_that_executes_some_sequence"
            ]
        }
    ]
}
